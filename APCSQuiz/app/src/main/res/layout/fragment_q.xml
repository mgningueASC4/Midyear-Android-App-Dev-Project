<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".questionsFrag">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/answerchoicesbackground"
        android:id="@+id/questionNumberText"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="#0/0"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/questionNumberText"
        android:src="@drawable/choicesbg2"
        android:scaleType="matrix"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/questionImageView"
        android:background="@android:color/black"/>

    <ScrollView
        android:id="@+id/answersScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/answerPannel"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/choiceA"
                android:background="@drawable/answerchoicesbackground"
                android:text="A"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/choiceB"
                android:background="@drawable/answerchoicesbackground"
                android:text="B"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/choiceC"
                android:background="@drawable/answerchoicesbackground"
                android:text="C"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/choiceD"
                android:background="@drawable/answerchoicesbackground"
                android:text="D"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/choiceE"
                android:background="@drawable/answerchoicesbackground"
                android:text="E"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"                android:layout_marginBottom="5dp"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/betternextbtn"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>